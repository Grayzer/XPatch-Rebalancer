<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- ===xpath=== -->
<!-- [XPatch] Rebalance - ССС -->
<Operation Class="PatchOperationFindMod">
<mods>
<li>Replimat</li>
</mods>
  <match Class="PatchOperationSequence">
    <success>Always</success>
    <operations>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatTerminal"]/comps/li[1]/basePowerConsumption</xpath>
        <value>
          <basePowerConsumption>1000</basePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatTerminal"]/comps/li[4]/activeModePowerConsumption</xpath>
        <value>
          <activeModePowerConsumption>3000</activeModePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatAnimalFeeder"]/comps/li[1]/basePowerConsumption</xpath>
        <value>
          <basePowerConsumption>250</basePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatAnimalFeeder"]/comps/li[4]/activeModePowerConsumption</xpath>
        <value>
          <activeModePowerConsumption>750</activeModePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatFeedTank"]/comps/li[@Class="CompProperties_Power"]/basePowerConsumption</xpath>
        <value>
          <basePowerConsumption>250</basePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatHopper"]/comps/li[1]/basePowerConsumption</xpath>
        <value>
          <basePowerConsumption>500</basePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatHopper"]/comps/li[5]/activeModePowerConsumption</xpath>
        <value>
          <activeModePowerConsumption>1500</activeModePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatCorpseRecycler"]/comps/li[1]/basePowerConsumption</xpath>
        <value>
          <basePowerConsumption>1000</basePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatCorpseRecycler"]/comps/li[4]/activeModePowerConsumption</xpath>
        <value>
          <activeModePowerConsumption>3000</activeModePowerConsumption>
        </value>
      </li>

      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ReplimatComputer"]/comps/li[1]/basePowerConsumption</xpath>
        <value>
          <basePowerConsumption>750</basePowerConsumption>
        </value>
      </li>

    </operations>
  </match>
</Operation>
</Patch>
